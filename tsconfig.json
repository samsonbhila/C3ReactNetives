{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node", // Include other types if needed
      "babel__generator",
      "babel__template",
      "babel__traverse",
      "hammerjs",
      "istanbul-lib-coverage",
      "prop-types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
